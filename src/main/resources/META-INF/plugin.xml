<idea-plugin url="https://github.com/ml-in-programming/code-completion-benchmark-plugin">
    <id>org.jetbrains.research.groups.ml_methods.code-completion-benchmark</id>
    <name>code-completion-benchmark</name>
    <vendor url="https://research.jetbrains.org/ru/groups/ml_methods">Machine Learning Methods in Software Engineering</vendor>

    <description><![CDATA[
    IntelliJ code completion benchmark plugin
    ]]></description>

    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>

    <extensionPoints>
        <extensionPoint qualifiedName="org.jetbrains.research.groups.ml.methods.code.completion.benchmark.ngram.ngramElementProvider"
                        interface="org.jetbrains.research.groups.ml_methods.code_completion_benchmark.completion.ngram.NGramElementProvider"/>
    </extensionPoints>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceInterface="com.intellij.codeInsight.completion.CompletionFinalSorter$Factory"
                            serviceImplementation="org.jetbrains.research.groups.ml_methods.code_completion_benchmark.completion.sorting.CompletionSorterFactory"/>
    </extensions>

    <extensions defaultExtensionNs="org.jetbrains.research.groups.ml.methods.code.completion.benchmark.ngram">
        <ngramElementProvider
                implementation="org.jetbrains.research.groups.ml_methods.code_completion_benchmark.completion.ngram.lang.JavaNGramElementProvider"/>
    </extensions>

    <actions>
        <group id="CompletionActions" text="Completion Test" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </group>
        <action id="org.jetbrains.research.groups.ml_methods.code_completion_benchmark.actions.TokenizeFileAction"
                class="org.jetbrains.research.groups.ml_methods.code_completion_benchmark.actions.TokenizeFileAction"
                text="Tokenize File">
            <add-to-group
                    group-id="CompletionActions"
                    anchor="first"/>
        </action>
        <action id="org.jetbrains.research.groups.ml_methods.code_completion_benchmark.actions.BuildVocabularyAction"
                class="org.jetbrains.research.groups.ml_methods.code_completion_benchmark.actions.BuildVocabularyAction"
                text="Build Vocabulary for File">
            <add-to-group
                    group-id="CompletionActions"
                    anchor="after"
                    relative-to-action="org.jetbrains.research.groups.ml_methods.code_completion_benchmark.actions.TokenizeFileAction"/>
        </action>
    </actions>
</idea-plugin>